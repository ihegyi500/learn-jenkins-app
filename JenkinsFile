pipeline {
    agent any

    stages {
        stage('wo/ Docker') {
            steps {
                sh '''
                    echo "Without Docker"
                    touch nocontainer.txt
                    ls -la
                '''
            }
        }
        stage('w/ Docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "With Docker"
                    touch container.txt
                    ls -la
                '''
            }
        }
    }
}
